<script>
  import { getCellDisplay, calculateEntropy, getStrengthLabel, getStrengthTier, checkHIBP, formatBreachCount, getBreachTier, calculatePenalizedEntropy } from '@lib/calculations';

  const passwordInput = document.getElementById('password') as HTMLInputElement;
  const toggleVisibility = document.getElementById('toggle-visibility') as HTMLButtonElement;
  const entropyBits = document.getElementById('entropy-bits') as HTMLSpanElement;
  const strengthLabel = document.getElementById('strength-label') as HTMLSpanElement;
  const passwordLength = document.getElementById('password-length') as HTMLSpanElement;
  const breachCount = document.getElementById('breach-count') as HTMLSpanElement;
  const breachBanners = document.querySelectorAll<HTMLSpanElement>('.breach-banner');
  const valueCells = document.querySelectorAll<HTMLTableCellElement>('.value-cell');

  let isPasswordVisible = true;
  let hasReceivedFirstFocus = false;
  let hibpDebounceTimer: ReturnType<typeof setTimeout> | null = null;
  let hibpAbortController: AbortController | null = null;

  function updateTableWithEntropy(entropy: number) {
    valueCells.forEach(cell => {
      const hashKey = cell.dataset.hashKey || 'sha256';
      const gpuCount = parseInt(cell.dataset.gpuCount || '1', 10);

      const display = getCellDisplay(entropy, hashKey, gpuCount);

      const valueSpan = cell.querySelector('.value') as HTMLElement;
      if (valueSpan) {
        valueSpan.textContent = display.text;
      }

      // Update tier class for color coding
      cell.classList.remove('tier-1', 'tier-2', 'tier-3', 'tier-4', 'tier-5');
      if (display.tier) {
        cell.classList.add(display.tier);
      }
    });
  }

  function updateTable() {
    const password = passwordInput.value;
    const entropy = calculateEntropy(password);

    // Update entropy display (will be updated again if HIBP finds breaches)
    entropyBits.textContent = `${(entropy ?? 0).toFixed(1)} bits`;
    entropyBits.classList.remove('penalized');
    breachBanners.forEach(banner => banner.classList.add('hidden'));
    strengthLabel.textContent = getStrengthLabel(entropy);
    strengthLabel.className = `entropy-value strength-badge ${getStrengthTier(entropy)}`;
    passwordLength.textContent = `${password.length} chars`;

    // Update table cells with original entropy
    updateTableWithEntropy(entropy ?? 0);

    // Cancel any pending HIBP request and debounce timer
    if (hibpDebounceTimer) clearTimeout(hibpDebounceTimer);
    if (hibpAbortController) hibpAbortController.abort();
    breachCount.textContent = '...';
    breachCount.className = 'entropy-value strength-badge';

    if (password.length === 0) {
      breachCount.textContent = '-';
      return;
    }

    // Debounced HIBP check (300ms delay to avoid excessive API calls)
    hibpDebounceTimer = setTimeout(async () => {
      hibpAbortController = new AbortController();
      const count = await checkHIBP(password, hibpAbortController.signal);
      if (hibpAbortController.signal.aborted) return;
      breachCount.textContent = formatBreachCount(count);
      breachCount.className = `entropy-value strength-badge ${getBreachTier(count)}`;

      // If password was found in breaches, penalize the entropy
      if (count > 0) {
        const { entropy: penalizedEntropy, isPenalized } = calculatePenalizedEntropy(entropy ?? 0, count);

        // Update entropy display with penalized value
        entropyBits.textContent = `${penalizedEntropy.toFixed(1)} bits`;
        if (isPenalized) {
          entropyBits.classList.add('penalized');
          breachBanners.forEach(banner => banner.classList.remove('hidden'));
        }

        // Update strength label based on penalized entropy
        strengthLabel.textContent = getStrengthLabel(penalizedEntropy);
        strengthLabel.className = `entropy-value strength-badge ${getStrengthTier(penalizedEntropy)}`;

        // Update entire table with penalized entropy
        updateTableWithEntropy(penalizedEntropy);
      }
    }, 300);
  }

  function togglePasswordVisibility() {
    isPasswordVisible = !isPasswordVisible;
    passwordInput.type = isPasswordVisible ? 'text' : 'password';

    const eyeIcon = toggleVisibility.querySelector('.eye-icon') as SVGElement;
    const eyeOffIcon = toggleVisibility.querySelector('.eye-off-icon') as SVGElement;

    if (isPasswordVisible) {
      eyeIcon.classList.remove('hidden');
      eyeOffIcon.classList.add('hidden');
    } else {
      eyeIcon.classList.add('hidden');
      eyeOffIcon.classList.remove('hidden');
    }
  }

  passwordInput.addEventListener('input', updateTable);
  toggleVisibility.addEventListener('click', togglePasswordVisibility);

  passwordInput.addEventListener('focus', () => {
    // On first focus, hide the password and select all text
    if (!hasReceivedFirstFocus) {
      hasReceivedFirstFocus = true;
      if (isPasswordVisible) {
        togglePasswordVisibility();
      }
    }
    passwordInput.select();
  });

  // Header highlight on cell hover
  const gpuHeaders = document.querySelectorAll<HTMLTableCellElement>('.gpu-header');
  const hashHeaders = document.querySelectorAll<HTMLTableCellElement>('.hash-header');

  valueCells.forEach(cell => {
    cell.addEventListener('mouseenter', () => {
      const row = cell.parentElement as HTMLTableRowElement;
      const cellIndex = Array.from(row.cells).indexOf(cell);
      const rowIndex = row.rowIndex - 1; // -1 for thead row

      // Highlight column header (cellIndex includes the row header, so -1)
      if (cellIndex > 0 && gpuHeaders[cellIndex - 1]) {
        gpuHeaders[cellIndex - 1].classList.add('highlight');
      }

      // Highlight row header
      if (hashHeaders[rowIndex]) {
        hashHeaders[rowIndex].classList.add('highlight');
      }
    });

    cell.addEventListener('mouseleave', () => {
      gpuHeaders.forEach(h => h.classList.remove('highlight'));
      hashHeaders.forEach(h => h.classList.remove('highlight'));
    });
  });
</script>
