---
import Layout from '@layouts/Layout.astro';
import { gpuScales, hashAlgorithms, getCellDisplay, calculateEntropy, getStrengthLabel, getStrengthTier, checkHIBP, formatBreachCount, getBreachTier, calculatePenalizedEntropy } from '@lib/calculations';

// Default password for initial render
const DEFAULT_PASSWORD = 'Tr0ub4dor&3';
const defaultEntropy = calculateEntropy(DEFAULT_PASSWORD)!;

// Pre-fetch HIBP breach count at build time
const defaultBreachCount = await checkHIBP(DEFAULT_PASSWORD);
const { entropy: displayEntropy, isPenalized } = calculatePenalizedEntropy(defaultEntropy, defaultBreachCount);

// Pre-calculate table values at build time (using penalized entropy if applicable)
const preCalculatedData = hashAlgorithms.map(hash =>
  gpuScales.map(gpu =>
    getCellDisplay(displayEntropy, hash.key, gpu.gpuCount)
  )
);
---

<Layout title="Password Entropy Calculator" description="Calculate a password's entropy and see how long it would take to crack with different hashing algorithms and attacker resources.">
  <main class="min-h-screen flex flex-col justify-center py-12 sm:py-16">
    <div class="mx-auto w-full max-w-5xl px-3 sm:px-6 lg:px-10 grow-0">
      <header class="text-center mb-16">
        <h1 class="text-2xl sm:text-3xl lg:text-4xl font-semibold text-slate-800 dark:text-slate-100 mb-1 sm:mb-2">
          Password Entropy Calculator
        </h1>
        <p class="text-lg sm:text-xl leading-tight text-slate-600 dark:text-slate-300 mx-auto">
          How long would it take to crack a password?
        </p>
      </header>

      <div class="flex flex-col items-center gap-4 sm:gap-6 mb-16">
        <div class="w-full max-w-100">
          <label for="password" class="block text-center password-label">
            Enter Sample Password
          </label>
          <div class="password-input-wrapper">
            <input
              type="text"
              id="password"
              value={DEFAULT_PASSWORD}
              class="password-input"
              placeholder="Enter a password..."
              autocomplete="off"
              spellcheck="false"
              data-1p-ignore
              data-lpignore="true"
              data-form-type="other"
            />
            <button type="button" id="toggle-visibility" class="visibility-toggle" aria-label="Toggle password visibility">
              <svg class="eye-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                <circle cx="12" cy="12" r="3"></circle>
              </svg>
              <svg class="eye-off-icon hidden" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path>
                <line x1="1" y1="1" x2="23" y2="23"></line>
              </svg>
            </button>
          </div>
        </div>

        <div class="grid grid-cols-2 min-[480px]:grid-cols-4 gap-2 sm:gap-4 w-full max-w-2xl">
          <div class="entropy-stat entropy-stat-with-banner">
            <span class="entropy-label">Entropy</span>
            <span class={`entropy-value ${isPenalized ? 'penalized' : ''}`} id="entropy-bits">{displayEntropy.toFixed(1)} bits</span>
            <span class={`breach-banner max-[480px]:hidden ${isPenalized ? '' : 'hidden'}`} id="breach-banner-desktop">Common password</span>
          </div>
          <div class="entropy-stat">
            <span class="entropy-label">Strength</span>
            <span class={`entropy-value strength-badge ${getStrengthTier(displayEntropy)}`} id="strength-label">{getStrengthLabel(displayEntropy)}</span>
          </div>
          <div class="entropy-stat">
            <span class="entropy-label">Length</span>
            <span class="entropy-value" id="password-length">{DEFAULT_PASSWORD.length} chars</span>
          </div>
          <div class="entropy-stat entropy-stat-with-banner">
            <span class="entropy-label">Breaches</span>
            <span class={`entropy-value strength-badge ${getBreachTier(defaultBreachCount)}`} id="breach-count">{formatBreachCount(defaultBreachCount)}</span>
            <span class={`breach-banner min-[480px]:hidden ${isPenalized ? '' : 'hidden'}`} id="breach-banner-mobile">Common password</span>
          </div>
        </div>
      </div>
    </div>

    <div class="w-full overflow-x-auto px-2 py-2">  {/* py-2 for drop shadow */}
      <table class="crack-table mx-auto">
        <thead>
          <tr>
            <th class="corner-cell">
              <span class="hash-label">Hash Algorithm</span>
              <span class="gpu-label">Attacker GPUs</span>
            </th>
            {gpuScales.map((gpu, index) => (
              <th class="gpu-header" data-gpu-index={index}>{gpu.label}</th>
            ))}
          </tr>
        </thead>
        <tbody>
          {hashAlgorithms.map((hash, rowIndex) => (
            <tr>
              <th class="hash-header" data-hash-index={rowIndex}>{hash.label}</th>
              {gpuScales.map((gpu, colIndex) => {
                const cell = preCalculatedData[rowIndex][colIndex];
                return (
                  <td
                    class={`value-cell ${cell.tier}`}
                    data-hash-key={hash.key}
                    data-gpu-count={gpu.gpuCount}
                  >
                    <span class="value">{cell.text}</span>
                  </td>
                );
              })}
            </tr>
          ))}
        </tbody>
      </table>
    </div>

    <div class="mx-auto w-full max-w-5xl px-3 sm:px-6 lg:px-10 grow-0">
      <div class="mt-8 text-center text-slate-500 dark:text-slate-400">
        <p class="text-sm font-medium uppercase mb-1">How to read this table</p>
        <p class="text-sm max-w-2xl mx-auto mb-4">
          Each cell shows the estimated time to crack the password.
          Rows represent different password hashing algorithms (stronger ones like Argon2id take longer to crack).
          Columns represent the attacker's computing power (more GPUs = faster cracking).
          Hash rates are based on RTX 5090 benchmarks with recommended hash parameters.
          We use <a class="underline" href="https://haveibeenpwned.com">haveibeenpwned.com</a> to securely check for password breaches and <a class="underline" href="https://github.com/zxcvbn-ts/zxcvbn">zxcvbn</a> to estimate entropy.
          Hosted on <a class="underline" href="https://github.com/hoxxep/passwordentropy.com" target="_blank">Github Pages</a>.
        </p>
      </div>

      <footer class="flex justify-center items-center gap-8 mt-12 max-sm:flex-col max-sm:gap-4">
        <a href="https://github.com/hoxxep/passwordentropy.com" target="_blank" class="footer-link">
          <svg class="footer-icon" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          <span>Star on GitHub</span>
        </a>
        <a href="https://xkcd.com/936/" target="_blank" class="footer-link">
          <svg class="footer-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
            <polyline points="15 3 21 3 21 9"></polyline>
            <line x1="10" y1="14" x2="21" y2="3"></line>
          </svg>
          <span data-i18n="basedOnXkcd">Inspired by xkcd #936</span>
        </a>
      </footer>
    </div>
  </main>
</Layout>

